                            Background="{x:Null}"
                            Kind="Logout"  HorizontalAlignment="Left" Foreground="White" Margin="-39,0,10,0"/>
                            <TextBlock FontSize="15">Logout</TextBlock>
                        </StackPanel>
                    </Button>

                </StackPanel>




            </Grid>

        </Grid>


    </Grid>
</Window>
