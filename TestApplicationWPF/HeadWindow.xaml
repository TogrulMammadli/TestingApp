<Window x:Class="TestApplicationWPF.HeadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TestApplicationWPF"
        mc:Ignorable="d"
        Title="HeadWindow" Height="600" Width="1200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="Icons/mainicon.png" WindowStyle="None"
        BorderBrush="#FF00AEFF" BorderThickness="1">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FF00AEFF" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
               
                <Button
                x:Name="HeadWndButtonClose"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Click="HeadWndButtonClose_Click">
                    <materialDesign:PackIcon
                    Width="20"
                    Height="20"
                    Background="{x:Null}"
                    Kind="Close" />
                </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Background="Gray">

                <Image Width="80" Height="80" Name="AvatarImage"  Source="Icons/avatar.png" >
                </Image>
                <TextBlock Name="UserNameSurnameTextBox" HorizontalAlignment="Center"  Margin="5"
                VerticalAlignment="Top"
                FontSize="12"
                Foreground="White"></TextBlock>
                <TextBlock Name="UserEmailTextBox" HorizontalAlignment="Center"  Margin="5"
                VerticalAlignment="Top"
                FontSize="10"
                Foreground="White"></TextBlock>

                <Button
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Width="200">
                    <materialDesign:PackIcon
                    Width="20"
                    Height="20"
                    Background="{x:Null}"
                    Kind="Menu" RenderTransformOrigin="0.547,-8.284" />
                </Button>
                <Button Content="1st" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click"></Button>
                <Button Content="2st" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click_1"></Button>
                <Button Content="3st" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click_2"></Button>
                <Button Content="UserManagement" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click_3"></Button>

            </StackPanel>

            <Frame Grid.Column="1" x:Name="frame" Content="frame" NavigationUIVisibility="Hidden"/>
        </Grid>

    </Grid>
</Window>
