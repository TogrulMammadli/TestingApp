<Page x:Class="TestApplicationWPF.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestApplicationWPF.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="1000"
      Title="SettingPage" Background="White">

    <Grid Background="#ecf0f1">
        <Grid.RowDefinitions>
            <RowDefinition Height="335"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="40 0 0 0">
                <Ellipse Height="150" Width="160">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Icons/avatar.png">
                        </ImageBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Button x:Name="edit" Width="120" Height="40" Click="Edit_Click" Margin="0 20 0 0">
                    <DockPanel>
                        <materialDesign:PackIcon Kind="Pencil" Width="45" Height="30"/>
                        <TextBlock Text=" Edit"  DockPanel.Dock="Right" VerticalAlignment="center"/>
                    </DockPanel>
                </Button>
            </StackPanel>

            <Rectangle Grid.Column="1"
                              Height="300"
                              Margin="35,0,35,0"
                              VerticalAlignment="Center"
                              Fill="White"
                              RadiusX="21.333"
                              RadiusY="21.333">
                <Rectangle.Effect>
                    <DropShadowEffect
                                     BlurRadius="15"
                                     Direction="0"
                                     RenderingBias="Quality"
                                     ShadowDepth="1"
                                     Color="#FFBBBBBB" />
                </Rectangle.Effect>
            </Rectangle>


            <TextBox
                                x:Name="textboxname"
                                PreviewTextInput="Textboxname_PreviewTextInput"
                                Grid.Column="1"
                                Width="850"
                                 Margin="80,80,80,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                materialDesign:HintAssist.Hint="Name"
                                FontSize="18"
                                MaxLength="25"/>

            <TextBox
                                x:Name="textboxage"
                                PreviewTextInput="numbervalit"
                                Grid.Column="1"
                                Width="850"
                                 Margin="80,120,80,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                materialDesign:HintAssist.Hint="Age"
                                FontSize="18"
                                MaxLength="2"/>

            <TextBox
                                x:Name="textboxphone"
                                PreviewTextInput="numbervalit"
                                Grid.Column="1"
                                Width="850"
                                 Margin="80,160,80,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                materialDesign:HintAssist.Hint="Phone"
                                FontSize="18"
                                MaxLength="18"/>

            <TextBox
                                x:Name="textboxemail"
                                Grid.Column="1"
                                Width="850"
                                 Margin="80,200,80,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                materialDesign:HintAssist.Hint="E-mail"
                                FontSize="18"
                                MaxLength="25"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="355"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle
                              Height="auto"
                              Fill="White"
                              RadiusX="21.333"
                              RadiusY="21.333" Grid.Column="1" Margin="0,0,35,30">
                <Rectangle.Effect>
                    <DropShadowEffect
                                     BlurRadius="15"
                                     Direction="0"
                                     RenderingBias="Quality"
                                     ShadowDepth="1"
                                     Color="#FFBBBBBB" />
                </Rectangle.Effect>
            </Rectangle>
            <StackPanel Grid.Row="1" Grid.Column="1" Width="auto"/>
                <TextBox
           x:Name="textboxpswd"
           Grid.Column="1"
           Grid.Row="1"
           Width="850"
           Margin="50,50,80,0"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           TextWrapping="Wrap"
           VerticalScrollBarVisibility="Auto"
           materialDesign:HintAssist.Hint="Password"
           FontSize="18"
           MaxLength="16"/>
            
            <TextBox
           x:Name="textboxconfpswd"
           Grid.Column="1"
           Grid.Row="1"
           Width="850"
           Margin="50,100,80,0"
           HorizontalAlignment="Left"
                VerticalAlignment="Top"
           TextWrapping="Wrap"
           VerticalScrollBarVisibility="Auto"
           materialDesign:HintAssist.Hint="Confirm Password"
           FontSize="18"
           MaxLength="16"/>
        </Grid>
    </Grid>
</Page>
