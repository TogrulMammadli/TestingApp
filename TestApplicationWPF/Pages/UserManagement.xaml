<Page x:Class="TestApplicationWPF.Pages.UserManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:TestApplicationWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="1050"
      Title="UserManagement" Name="MyPage"
      Margin="50 0 0 0">
    <Page.Resources >
        <Style TargetType="ListBoxItem" x:Name="style">
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Name="Border" Padding="2" SnapsToDevicePixels="true"
PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
      </Style>
 </Page.Resources>
    <Grid
        Background="AliceBlue">
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Name="SearchesStackPanel" Height="60" Orientation="Horizontal"
                        HorizontalAlignment="Center" >
                <TextBox 
                    Name="SearchTxtBox" 
                    Background="White"
                    materialDesign:HintAssist.Hint="Enter name,surname,email or login for search.." 
                    MinHeight="30" 
                    MinWidth="600" 
                    Margin="15"
                    Padding="3,0,0,0"
                    FontSize="15"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                   VerticalContentAlignment="Center" TextChanged="SearchTxtBox_TextChanged" ></TextBox>
                
                <!--<Button
                    Name="FilterButton"
                    Margin="7" Click="ButtonFilter_Click"
                    >Filter</Button>-->
            </StackPanel>

            <Grid
                DockPanel.Dock="Bottom"
                Height="40"
                Background="AliceBlue"
                VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal">
                    <TextBlock 
                    VerticalAlignment="Center"
                    FontSize="20">
                    Users count:
                    </TextBlock>
                    <TextBlock 
                     
                    Name="CountBox"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Margin="10,0"
                    Text="{Binding  ElementName=usersListBox,Path=Items.Count}"
                    ></TextBlock>

                </StackPanel>
                <Button Height="30"
                        Width="80"
                        Padding="0"
                        Margin="5"
                        HorizontalAlignment="Right" Click="Button_Click">
                    Add User
                </Button>
            </Grid>
            <ListBox  Name="usersListBox" Width="{Binding ElementName=MyPage,Path=ActualWidth}"
                     Background="Coral"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ItemsSource="{Binding Users}">
                <ListBox.Template>
                    <ControlTemplate>
                        <DockPanel LastChildFill="True" Name="ListboxDoc">
                            <Grid DockPanel.Dock="Top" Height="30" Background="Orange">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition  Width="150"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" HorizontalContentAlignment="Left">Name</Label>
                                <Label Grid.Column="1" HorizontalContentAlignment="Left">Surname</Label>
                                <Label Grid.Column="2" HorizontalContentAlignment="Left">Login</Label>
                                <Label Grid.Column="3" HorizontalContentAlignment="Left ">Email</Label>

                            </Grid>
                            <ItemsPresenter></ItemsPresenter>
                        </DockPanel>
                    </ControlTemplate>
                </ListBox.Template>
                <ListBox.ItemTemplate>
                    <DataTemplate >
                        <Grid Name="Element" Margin="0,2" Width="{Binding ElementName=MyPage,Path=ActualWidth}">
                            <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition  ></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" Margin="2" Grid.Column="0" />
                            <TextBlock Text="{Binding Surname}" Margin="2" Grid.Column="1"/>
                            <TextBlock Text="{Binding Login}" Margin="2" Grid.Column="2" />
                            <TextBlock Text="{Binding Email}" Margin="2" Grid.Column="3"/>
                            <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                <Button Name="Edit" Width="40" Margin="5" VerticalAlignment="Center" ToolTip="Edit" Click="Edit_Click">E</Button>
                                <Button Name="View" Width="40" Margin="5"  VerticalAlignment="Center" Background="Green" ToolTip="View all info">V</Button>
                                <Button Name="Remove" Width="40" Margin="5" VerticalAlignment="Center"  Background="DarkRed" ToolTip="Remove" Click="Remove_Click">R</Button>
                            </StackPanel>
                        </Grid>
                      
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Grid>
</Page>
