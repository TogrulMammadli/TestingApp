<Page
    x:Class="TestApplicationWPF.Pages.UserManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestApplicationWPF.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="MyPage"
    Title="UserManagement"
    Margin="50,0,0,0"
    d:DesignHeight="560"
    d:DesignWidth="1050"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Name="style" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            Name="Border"
                            Padding="2"
                            PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown"
                            SnapsToDevicePixels="true">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="#ecf0f1">
        <DockPanel LastChildFill="True">
            <StackPanel
                Name="SearchesStackPanel"
                Height="60"
                HorizontalAlignment="Center"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <TextBox
                    Name="SearchTxtBox"
                    MinWidth="600"
                    MinHeight="30"
                    Margin="15"
                    Padding="3,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    materialDesign:HintAssist.Hint="Enter name,surname,email or login for search.."
                    Background="White"
                    FontSize="15"
                    TextChanged="SearchTxtBox_TextChanged" />
                <!--<Button
                    Name="FilterButton"
                    Margin="7" Click="ButtonFilter_Click"
                    >Filter</Button>-->
            </StackPanel>
            <Grid
                Height="40"
                VerticalAlignment="Bottom"
                Background="#ecf0f1"
                DockPanel.Dock="Bottom">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" FontSize="20">
                        Users count:
                    </TextBlock>
                    <TextBlock
                        Name="CountBox"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding ElementName=usersListBox, Path=Items.Count}" />
                </StackPanel>
                <Button
                    Width="80"
                    Height="30"
                    Margin="5"
                    Padding="0"
                    HorizontalAlignment="Right"
                    Click="Button_Click">
                    Add User
                </Button>
            </Grid>

            <ListBox
                Name="usersListBox"
                Width="{Binding ElementName=MyPage, Path=ActualWidth}"
                Background="Coral"
                ItemsSource="{Binding Users}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.Template>
                    <ControlTemplate>
                        <DockPanel Name="ListboxDoc" LastChildFill="True">
                            <Grid
                                Height="30"
                                Background="Orange"
                                DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" HorizontalContentAlignment="Center">Name</Label>
                                <Label Grid.Column="1" HorizontalContentAlignment="Center">Surname</Label>
                                <Label Grid.Column="2" HorizontalContentAlignment="Center">Login</Label>
                                <Label Grid.Column="3" HorizontalContentAlignment="Center">Email</Label>
                            </Grid>
                            <ItemsPresenter />
                        </DockPanel>
                    </ControlTemplate>
                </ListBox.Template>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Name="Element"
                            Width="{Binding ElementName=MyPage, Path=ActualWidth}"
                            Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="150" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                Background="Bisque"
                                Text="{Binding Name}" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Text="{Binding Surname}" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                Background="Bisque"
                                Text="{Binding Login}" />
                            <TextBlock
                                Grid.Column="3"
                                HorizontalAlignment="Center"
                                Text="{Binding Email}" />
                            <StackPanel
                                Grid.Column="4"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button
                                    Name="Edit"
                                    Width="40"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Click="Edit_Click"
                                    ToolTip="Edit">
                                    E
                                </Button>
                                <Button
                                    Name="View"
                                    Width="40"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Background="Green"
                                    ToolTip="View all info">
                                    V
                                </Button>
                                <Button
                                    Name="Remove"
                                    Width="40"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Background="DarkRed"
                                    Click="Remove_Click"
                                    ToolTip="Remove">
                                    R
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Grid>
</Page>
